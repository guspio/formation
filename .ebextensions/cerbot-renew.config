# This cron job runs at 1 and 13
# Only certs that will expire in <30 days
# will be renewed
files:
  "/tmp/renew_cert_cron":
    mode: "000777"
    owner: root
    group: root
    content: |
      # renew Lets encrypt cert with certbot command
      0 1,13 * * * /tmp/certbot-auto renew

container_commands:
  10_create_cert_crontab:
    command: crontab /tmp/renew_cert_cron
  20_delete_cronjob_file:
    command: rm /tmp/renew_cert_cron